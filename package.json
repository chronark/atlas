{
  "name": "atlas",
  "version": "0.0.0-development",
  "description": "Mapping library for jobs",
  "homepage": "https://github.com/chronark/atlas",
  "bugs": {
    "url": "https://github.com/chronark/atlas/issues"
  },
  "repository": "https://github.com/chronark/atlas.git",
  "license": "MIT",
  "author": "Andreas Thomas <andreas.thomas@th-nuernberg.de>",
  "scripts": {
    "build": "webpack --mode=production --progress",
    "buildandserve": "yarn build && yarn serve",
    "dev": "webpack-dev-server --progress",
    "docker": "docker build -t chronark/atlas . && docker run --rm -p 80:80 chronark/atlas",
    "fmt": "yarn prettier && yarn lint",
    "lint": "eslint --fix --ext .js,.ts ./",
    "prettier": "prettier --write ./**/*.{js,ts,json} --loglevel warn",
    "serve": "serve ./dist",
    "test:e2e": "node ./__tests__/e2e/testcafe.js",
    "test:full": "yarn install && yarn fmt && yarn tsc && yarn test:unit && yarn build && yarn test:e2e:ci",
    "test:unit": "jest",
    "tsc": "yarn tsc:default && yarn tsc:testcafe",
    "tsc:testcafe": "yarn tsc:default -p ./tsconfig.testcafe.json ",
    "tsc:default": "./node_modules/.bin/tsc --noEmit --pretty",
    "updateJobs": "curl https://jobboerse.th-nuernberg.de/srv.php/en/Suche/offers > ./static/rawJobs.json && prettier --write ./static/rawJobs.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn typedoc && lint-staged && yarn test:unit",
      "pre-push": "yarn test:unit"
    }
  },
  "dependencies": {
    "axios": "0.19.2",
    "ol": "6.2.1",
    "ol-ext": "3.1.11",
    "ol-mapbox-style": "6.1.1"
  },
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.9.6",
    "@babel/plugin-transform-for-of": "7.9.0",
    "@babel/plugin-transform-runtime": "7.9.6",
    "@babel/polyfill": "7.8.7",
    "@babel/preset-env": "7.9.6",
    "@babel/preset-typescript": "7.9.0",
    "@types/geojson": "7946.0.7",
    "@types/html-webpack-plugin": "3.2.2",
    "@types/jest": "25.2.1",
    "@types/node": "12.12.37",
    "@types/ol": "6.3.1",
    "@typescript-eslint/eslint-plugin": "2.30.0",
    "@typescript-eslint/parser": "2.30.0",
    "babel-loader": "8.1.0",
    "babel-plugin-macros": "2.8.0",
    "core-js": "3.6.5",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-config-standard": "14.1.1",
    "eslint-formatter-pretty": "3.0.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jest": "23.9.0",
    "eslint-plugin-jsdoc": "24.0.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "eslint-plugin-testcafe": "0.2.1",
    "extract-text-webpack-plugin": "3.0.2",
    "html-webpack-plugin": "3.2.0",
    "husky": "4.2.5",
    "jest": "25.5.4",
    "jest-canvas-mock": "2.2.0",
    "lint-staged": "10.2.2",
    "prettier": "2.0.4",
    "proxy-polyfill": "0.3.1",
    "regenerator-runtime": "0.13.5",
    "require-context.macro": "1.2.2",
    "serve": "11.3.0",
    "source-map-loader": "0.2.4",
    "start-server-and-test": "1.11.0",
    "style-loader": "1.2.1",
    "testcafe": "1.8.4",
    "ts-jest": "25.4.0",
    "ts-loader": "7.0.2",
    "typedoc": "0.17.6",
    "typedoc-plugin-markdown": "2.2.17",
    "typescript": "3.8.3",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.10.3"
  },
  "main": "index.js"
}
