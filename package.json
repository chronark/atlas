{
  "name": "atlas",
  "version": "0.0.0-development",
  "description": "Mapping library for jobs",
  "homepage": "https://github.com/chronark/atlas",
  "bugs": {
    "url": "https://github.com/chronark/atlas/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chronark/atlas.git"
  },
  "license": "MIT",
  "author": "Andreas Thomas <andreas.thomas@th-nuernberg.de>",
  "scripts": {
    "build": "webpack --mode=production --progress",
    "buildandserve": "yarn build && yarn serve",
    "dev": "webpack-dev-server --progress",
    "e2e": "./node_modules/.bin/cypress open",
    "e2e:ci": "./node_modules/.bin/cypress run",
    "fmt": "yarn prettier && yarn lint",
    "prettier": "prettier --write ./**/*.{js,ts,json} --loglevel warn",
    "lint": "eslint --fix --ext .js,.ts ./",
    "serve": "serve ./dist",
    "test:e2e": "start-server-and-test buildandserve http://localhost:5000 e2e",
    "test:e2e:ci": "start-server-and-test serve http://localhost:5000 e2e:ci",
    "test:unit": "jest",
    "tsc": "./node_modules/.bin/tsc --noEmit",
    "docs:buildTypes": "yarn typedoc",
    "docs:show": "yarn docs:buildTypes && cd docs && yarn start",
    "docs:build": "yarn docs:buildTypes && cd docs && yarn && yarn build",
    "test:full": "yarn install && yarn fmt && yarn tsc && yarn test:unit && yarn build && yarn test:e2e:ci",
    "updateJobs": "curl https://jobboerse.th-nuernberg.de/srv.php/en/Suche/offers > ./static/rawJobs.json && prettier --write ./src/lib/apis/rawJobs.json",
    "docker": "docker build -t chronark/atlas . && docker run --rm -p 80:80 chronark/atlas"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test:unit"
    }
  },
  "dependencies": {
    "axios": "0.19.2",
    "ol": "6.2.1",
    "ol-ext": "3.1.10",
    "ol-mapbox-style": "6.1.1"
  },
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.9.0",
    "@babel/plugin-transform-for-of": "7.9.0",
    "@babel/plugin-transform-runtime": "7.9.0",
    "@babel/polyfill": "7.8.7",
    "@babel/preset-env": "7.9.0",
    "@babel/preset-typescript": "7.9.0",
    "@types/geojson": "7946.0.7",
    "@types/html-webpack-plugin": "3.2.2",
    "@types/jest": "25.1.4",
    "@types/node": "12.12.31",
    "@types/ol": "6.2.0",
    "@typescript-eslint/eslint-plugin": "2.25.0",
    "@typescript-eslint/parser": "2.25.0",
    "babel-loader": "8.1.0",
    "babel-plugin-macros": "2.8.0",
    "core-js": "3.6.4",
    "css-loader": "3.4.2",
    "cypress": "4.2.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-config-standard": "14.1.1",
    "eslint-formatter-pretty": "3.0.1",
    "eslint-plugin-cypress": "2.10.3",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jest": "23.8.2",
    "eslint-plugin-jsdoc": "22.1.0",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "eslint-plugin-unicorn": "17.2.0",
    "extract-text-webpack-plugin": "3.0.2",
    "html-webpack-plugin": "3.2.0",
    "husky": "4.2.3",
    "jest": "25.1.0",
    "jest-canvas-mock": "2.2.0",
    "lint-staged": "10.0.9",
    "postcss-import": "12.0.1",
    "postcss-loader": "3.0.0",
    "prettier": "1.19.1",
    "purgecss-webpack-plugin": "2.0.5",
    "regenerator-runtime": "0.13.5",
    "require-context.macro": "1.2.2",
    "serve": "11.3.0",
    "source-map-loader": "0.2.4",
    "start-server-and-test": "1.10.11",
    "style-loader": "1.1.3",
    "ts-jest": "25.2.1",
    "ts-loader": "6.2.2",
    "typedoc": "0.17.3",
    "typedoc-plugin-markdown": "2.2.17",
    "typescript": "3.8.3",
    "webpack": "4.42.1",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.10.3"
  }
}
